<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true">

    <ImageView
        android:id="@+id/imageViewEpisodeBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        tools:ignore="ContentDescription" />

    <ScrollView
        android:id="@+id/scrollViewEpisode"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/containerEpisode"
            style="@style/DefaultPadding.Page"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewEpisodeShowTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/default_padding"
                android:layout_marginRight="@dimen/default_padding"
                android:background="?custom_list_selector"
                android:clickable="true"
                android:focusable="true"
                android:nextFocusDown="@+id/checkinButton"
                android:nextFocusLeft="@+id/showTitle"
                android:nextFocusRight="@+id/showTitle"
                android:paddingBottom="@dimen/default_padding"
                android:paddingRight="@dimen/default_padding"
                android:paddingTop="@dimen/default_padding"
                tools:text="@string/app_name"
                android:textAllCaps="true"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewEpisodeTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/default_padding"
                android:layout_marginRight="@dimen/default_padding"
                tools:text="@string/app_name"
                android:textAppearance="@style/TextAppearance.Large.Light"
                android:textIsSelectable="true" />

            <TextView
                android:id="@+id/textViewEpisodeReleaseTime"
                style="@style/DefaultPadding.Blocks.WithBottomMargin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="@string/app_name"
                android:textAppearance="@style/TextAppearance.Small"
                android:textIsSelectable="true" />

            <include
                layout="@layout/imagecontainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?attr/colorAccent" />

            <include layout="@layout/buttonbar" />

            <include layout="@layout/ratingbar" />

            <TextView
                android:id="@+id/textViewEpisodeDescription"
                style="@style/DefaultPadding.Blocks.WithBottomMargin.FlowText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.Light"
                android:textIsSelectable="true" />

            <TextView
                android:id="@+id/labelEpisodeGuestStars"
                style="@style/DefaultPadding.Blocks.WithTopMargin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/episode_gueststars"
                android:textAppearance="@style/TextAppearance.Small.Label" />

            <TextView
                android:id="@+id/textViewEpisodeGuestStars"
                style="@style/DefaultPadding.Blocks.WithBottomMargin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.Light"
                android:textIsSelectable="true" />

            <TextView
                android:id="@+id/labelEpisodeDirectors"
                style="@style/DefaultPadding.Blocks.WithTopMargin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/episode_directors"
                android:textAppearance="@style/TextAppearance.Small.Label" />

            <TextView
                android:id="@+id/textViewEpisodeDirectors"
                style="@style/DefaultPadding.Blocks.WithBottomMargin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.Light"
                android:textIsSelectable="true" />

            <TextView
                android:id="@+id/labelEpisodeWriters"
                style="@style/DefaultPadding.Blocks.WithTopMargin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/episode_writers"
                android:textAppearance="@style/TextAppearance.Small.Label" />

            <TextView
                android:id="@+id/textViewEpisodeWriters"
                style="@style/DefaultPadding.Blocks.WithBottomMargin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.Light"
                android:textIsSelectable="true" />

            <TextView
                android:id="@+id/labelEpisodeDvd"
                style="@style/DefaultPadding.Blocks.WithTopMargin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/episode_dvdnumber"
                android:textAppearance="@style/TextAppearance.Small.Label" />

            <TextView
                android:id="@+id/textViewEpisodeDvd"
                style="@style/DefaultPadding.Blocks.WithBottomMargin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.Light"
                android:textIsSelectable="true" />

            <TextView
                android:id="@+id/labelEpisodeReleaseDay"
                style="@style/DefaultPadding.Blocks.WithTopMargin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/episode_firstaired"
                android:textAppearance="@style/TextAppearance.Small.Label" />

            <TextView
                android:id="@+id/textViewEpisodeReleaseDay"
                style="@style/DefaultPadding.Blocks.WithBottomMargin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.Light"
                android:textIsSelectable="true" />

            <TextView
                android:id="@+id/labelEpisodeLastEdit"
                style="@style/DefaultPadding.Blocks.WithTopMargin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lastEdit"
                android:textAppearance="@style/TextAppearance.Small.Label" />

            <TextView
                android:id="@+id/textViewEpisodeLastEdit"
                style="@style/DefaultPadding.Blocks.WithBottomMargin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.Light"
                android:textIsSelectable="true" />

            <include
                android:id="@+id/buttonbar_ref"
                layout="@layout/buttonbar_services"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/default_padding"
                android:layout_marginRight="@dimen/default_padding"
                android:text="@string/extensions"
                android:textAppearance="@style/TextAppearance.Small.Label" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/inline_padding"
                android:background="?attr/colorAccent" />

            <LinearLayout
                android:id="@+id/containerEpisodeActions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="?attr/drawableDivider"
                android:orientation="vertical"
                android:showDividers="middle" />

        </LinearLayout>
    </ScrollView>

</FrameLayout>