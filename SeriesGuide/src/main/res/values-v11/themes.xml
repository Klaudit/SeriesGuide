<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- SeriesGuides default theme v11+ customizations -->
    <style name="SeriesGuideBaseTheme" parent="Theme.Sherlock">

        <!-- System widgets (native) -->
        <item name="android:activatedBackgroundIndicator">@drawable/activated_background_sg</item>
        <item name="android:editTextBackground">@drawable/edit_text_sg</item>
        <item name="android:listChoiceBackgroundIndicator">@drawable/list_selector_sg</item>
        <item name="android:listChoiceIndicatorMultiple">@drawable/btn_check_sg</item>

        <!-- Action bar (native, v11+) -->
        <item name="android:actionBarStyle">@style/ActionBar</item>
        <item name="android:actionBarTabTextStyle">@style/ActionBarTabTextStyle</item>
        <item name="android:actionBarItemBackground" tools:targetApi="ice_cream_sandwich">@drawable/list_selector_sg</item>

        <!-- Fast scroll thumb -->
        <item name="android:fastScrollThumbDrawable">@drawable/fastscroll_thumb</item>
    </style>

    <!-- Dark Android theme v11+ customizations -->
    <style name="AndroidBaseTheme" parent="Theme.Sherlock">

        <!-- Action bar (native, v11+) -->
        <item name="android:actionBarStyle">@style/ActionBarDark</item>

    </style>

    <!-- SeriesGuide Light theme v11+ customizations -->
    <style name="SeriesGuideBaseThemeLight" parent="Theme.Sherlock.Light.DarkActionBar">

        <!-- System widgets (native) -->
        <item name="android:activatedBackgroundIndicator">@drawable/activated_background_sg</item>
        <item name="android:editTextBackground">@drawable/edit_text_holo_light</item>
        <item name="android:listChoiceBackgroundIndicator">@drawable/list_selector_sg</item>
        <item name="android:listChoiceIndicatorMultiple">@drawable/btn_check_sg_light</item>

        <!-- Action bar (native, v11+) -->
        <item name="android:actionBarStyle">@style/ActionBar.Light</item>
        <item name="android:actionBarTabTextStyle">@style/ActionBarTabTextStyle</item>
        <item name="android:actionBarItemBackground" tools:targetApi="ice_cream_sandwich">@drawable/list_selector_sg</item>
        <item name="android:actionBarWidgetTheme" tools:targetApi="ice_cream_sandwich">@style/Theme.SeriesGuide.Light.Widget</item>

        <!-- Fast scroll thumb -->
        <item name="android:fastScrollThumbDrawable">@drawable/fastscroll_thumb</item>
    </style>

    <!-- Special themes -->
    <style name="ImmersiveTheme" parent="SeriesGuideTheme">

        <!-- Action bar (native, v11+) -->
        <item name="android:actionBarStyle">@style/ActionBar.Invisible</item>

        <!-- ABS (still used on 3.x) -->
        <item name="actionBarStyle">@style/ActionBar.Invisible</item>

    </style>

    <style name="ImmersiveTheme.Stock" parent="AndroidTheme">

        <!-- Action bar (native, v11+) -->
        <item name="android:actionBarStyle">@style/ActionBar.Invisible</item>

        <!-- ABS (still used on 3.x) -->
        <item name="actionBarStyle">@style/ActionBar.Invisible</item>

    </style>

    <style name="ImmersiveTheme.Light" parent="SeriesGuideThemeLight">

        <!-- Action bar (native, v11+) -->
        <item name="android:actionBarStyle">@style/ActionBar.Light.Invisible</item>
        <item name="android:actionOverflowButtonStyle">@style/Widget.Sherlock.Light.ActionButton.Overflow</item>
        <item name="android:homeAsUpIndicator">@drawable/abs__ic_ab_back_holo_light</item>

        <!-- ABS (still used on 3.x) -->
        <item name="actionBarStyle">@style/ActionBar.Light.Invisible</item>
        <item name="actionOverflowButtonStyle">@style/Widget.Sherlock.Light.ActionButton.Overflow</item>
        <item name="homeAsUpIndicator">@drawable/abs__ic_ab_back_holo_light</item>

    </style>

</resources>